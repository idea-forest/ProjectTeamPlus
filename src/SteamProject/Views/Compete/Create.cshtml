@model SteamProject.ViewModels.CompeteCreateVM
@{
    ViewData["Title"] = "Competition Creation";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery.sumoselect/3.4.9/sumoselect.css" integrity="sha512-LaiY5+mk1DRzS0s8h8G4Ol9F7uG8HRP5lZuUjMI6MIBUhkt67K/bi8f6N6jBX1A1uPkFjAP1FU5Mys/zbDDv8A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link href="https://fonts.cdnfonts.com/css/common-pixel" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Compete.css">

</head>

<input type="hidden" id="SteamId" name="SteamId" value="@Model.SteamId">
<input type="hidden" id="SinId" name="SinId" value="@Model.SinId">

<div class="formWrapper">
    <div class="timeWrapper">
        <label><p>Competition Type: </p></label>
        <select name="" id="categorySelect">
            <option value="Duel"> <p>Duel</p> </option>
            <option value="Free-For-All"> <p>Free-For-All </p></option>
        </select>
    </div>
    
    <form id="createForm" method="post">
        <input type="hidden" name="SteamId" asp-for="SteamId">
        <div class="timeWrapper">
            <label for="compStartTime"><p>Begin Time:</p></label>
            <input type="datetime-local" value=@Model.MinDate min="2000-01-01T00:00" class="compTimeIn" asp-for="CompStartTime">
        </div>
        <div class="timeWrapper">
            <label for="compEndTime"><p>End Time:</p></label>
            <input type="datetime-local" value=@Model.MinDate min="2000-01-01T00:00" class="compTimeIn" asp-for="CompEndTime">
        </div>

        <div id="formInternals">
            
        </div>
        @* <input type="submit"> *@
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript" src="~/js/competeCreatePage.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.sumoselect/3.4.9/jquery.sumoselect.js" integrity="sha512-a+P5fXxnZUFxhI1fav+msdG+W3bMfIFGMaYW2Wsf+MYIFKNpj/i9TJ6hLDkpcy0e3HBFzYxKBt6HIJEOg/qXgw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}