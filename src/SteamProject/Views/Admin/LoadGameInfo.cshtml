@model List<SteamProject.ViewModels.GameVM>
@{
    ViewData["Title"] = "Admin - Load Game Info";
}
<br>
<div class="container">
    <main role="main" class="pb-3">
        <h1>Load Bulk Game Info</h1>
        <hr>
        <div class="row">
            @Html.Partial("AdminNavigation")
            @{
                if(Model == null)
                {
                    <h1>@ViewBag.MyString</h1>
                }
                else if(Model.Count() > 0)
                {
                    <div class="col">
                        <div class="row">
                            <table class="table">
                                <h1>Game Info Added</h1>
                                <thead>
                                    <tr>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Steam App Id
                                        </th>
                                        <th>
                                            Genres
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach(var game in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @game._game.Name
                                                </td>
                                                <td>
                                                    @game._appId
                                                </td>
                                                <td>
                                                    @game._game.Genres
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col">
                        <h1>All of the games in the server library have bulk info already loaded.</h1>
                    </div>
                }
            }
        </div>
    </main>
</div>