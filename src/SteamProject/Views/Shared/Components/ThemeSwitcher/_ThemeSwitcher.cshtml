@{
    var currentTheme = Context.Items["Theme"] as string;
    var isChecked = currentTheme == "dark";
}

<div class="btn-container">
    <i class="fa fa-sun-o" aria-hidden="true"></i>
    <label class="switch btn-color-mode-switch">
        <input type="checkbox" name="color_mode" id="color_mode" @if (isChecked) { <text>checked</text> } />
        <label for="color_mode" data-on="Dark" data-off="Light" class="btn-color-mode-switch-inner"></label>
    </label>
    <i class="fa fa-moon-o" aria-hidden="true"></i>
</div>

<script src="~/js/theme-switcher.js"></script>