@model SteamProject.ViewModels.GameVM;
@{
    ViewData["Title"] = "ShowMoreInfo";
    var pocoData = Model._poco.response.data;
    var gameData = Model._game;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3" style="width: 500px">
            <div>
                <img src="@string.Format("https://steamcdn-a.akamaihd.net/steam/apps/{0}/header.jpg", @gameData.AppId)" style="height:200px"/>
            </div>
        </div>
        <div class="col-lg-6" style="padding-top: 40px;">
            <p>@pocoData.short_description</p>
        </div>
    </div>
    <br>
    <div class="flex-container">
        <div class="card gameInfoCard">
            <div class="card-body">
                <h5 class="card-title">
                    General Categories
                </h5>
                <div class="scrollable">
                    @{
                        foreach(var cat in pocoData.categories)
                        {
                            <p class="card-text">@cat.description</p>
                        }
                    }
                </div>
            </div>
        </div>
        <div class="card gameInfoCard">
            <div class="card-body">
                <h5 class="card-title">
                    Developers
                </h5>
                <div class="scrollable">
                    @{
                        foreach(var dev in pocoData.developers)
                        {
                            <p class="card-text">@dev</p>
                        }
                    }
                </div>
            </div>
        </div>
        <div class="card gameInfoCard">
            <div class="card-body">
                <h5 class="card-title">
                    Publishers
                </h5>
                <div class="scrollable">
                    @{
                        foreach(var pub in pocoData.publishers)
                        {
                            <p class="card-text">@pub</p>
                        }
                    }
                </div>
            </div>
        </div>
        <div class="card gameInfoCard">
            <div class="card-body">
                <h5 class="card-title">
                    Game Genres
                </h5>
                <div class="scrollable">
                    @{
                        foreach(var genre in pocoData.genres)
                        {
                            <p class="card-text">@genre.description</p>
                        }
                    }
                </div>
            </div>
        </div>
        <div class="card gameInfoCard">
            <div class="card-body">
                <h5 class="card-title">
                    Ratings
                </h5>
                <div class="scrollable">
                    @{
                        if(pocoData.metacritic != null)
                        {
                            <p class="card-text">Metacritic: @pocoData.metacritic.score</p>
                        }
                        else
                        {
                            <p class="card-text">No Metacritic rating available</p>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<p>These are the PC requirements</p>
@{
    <div>@pocoData.pc_requirements.minimum</div>
}
<br>
@{
    <div>@pocoData.pc_requirements.recommended</div>
}
<br><br>

<p>These are the Linux requirements</p>
@{
    <div>@pocoData.linux_requirements.minimum</div>
}
<br>
@{
    <div>@pocoData.linux_requirements.recommended</div>
}
<br><br>
<p>These are the Mac requirements</p>
@{
    <div>@pocoData.mac_requirements.minimum</div>
}
<br>
@{
    <div>@pocoData.mac_requirements.recommended</div>
}