@model SteamProject.ViewModels.GameNewsVM;
@{
    ViewData["Title"] = "ShowMoreInfo";
    var pocoData = Model._poco.appnews;
    var gameData = Model._game;
}

<head>
    <link rel="stylesheet" href="~/css/ShowMoreInfo.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<div class="container-fluid">
    <div class="row">
        <div class="container" style="width: 500px">
            <div>
                <img src="@string.Format("https://steamcdn-a.akamaihd.net/steam/apps/{0}/header.jpg", @gameData.AppId)" style="height:200px"/>
            </div>
        </div>

        <div class="container-fluid" style="padding-top: 40px;   white-space: pre-wrap; justify-content: center;">
            <h3 style="text-align: center;">@gameData.Name</h3>
           
            @foreach (var item in Model._poco.appnews.newsitems)
            {
                <p>@item.feedname</p>
                <p>@item.title</p>
                <a href="@item.url">Link to Article</a>
                <p>@item.contents</p>

            }

        </div>
    </div>
    <br>

</div>