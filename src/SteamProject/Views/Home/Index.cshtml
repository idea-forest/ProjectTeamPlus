@{
    ViewData["Title"] = "Home Page";
}


<div id="landingCarousel" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#landingCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#landingCarousel" data-slide-to="1"></li>
    <li data-target="#landingCarousel" data-slide-to="2"></li>
    <li data-target="#landingCarousel" data-slide-to="3"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="carousel-img" src="~/assets/slideOne.png" height="175px" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="carousel-img" src="~/assets/slideTwo.png" height="300px" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="carousel-img" src="~/assets/slideThree.png"  height="300px" alt="Third slide">
    </div>
    <div class="carousel-item">
      <img class="carousel-img" src="~/assets/slideFour.png"  height="300px" alt="Fourth slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#landingCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only"></span>
  </a>
  <a class="carousel-control-next" href="#landingCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only"></span>
  </a>
</div>
<br><br>
<div class="land-section">
    <div class="minor1">
        Get started instantly.
    </div>
    <br>
    <div class="major1">
        Sign-up and link with STEAM®
    </div>
    <br>
    <div class="steam-pill">
        Sign-up now
    </div>
    <br><br>
    <div class="major2">
        "The best platform for achievement hunting."
    </div>
    <br><br>
    <div class="minor2">
        See what gamers like you are saying.
    </div>

    <div class="testimonials">
        <div class="row">
            <div class="test">
                <img src="https://avatars.githubusercontent.com/u/63480959?v=4" alt="" class="test-img">
                <div class="test-text">I had no idea how much my friends had done without me!</div>
            </div>
            <div class="test">
                <img src="https://avatars.githubusercontent.com/u/72096735?v=4" alt="" class="test-img">
                <div class="test-text">Access all your steam information and game news in one place?</div>
            </div>
            <div class="test">
                <img src="https://avatars.githubusercontent.com/u/63754468?v=4" alt="" class="test-img">
                <div class="test-text"></div>
            </div>
            <div class="test">
                <img src="https://avatars.githubusercontent.com/u/63754567?v=4" alt="" class="test-img">
                <div class="test-text">This platform rocks! Stay tuned for more exciting features!</div>
            </div>
        </div>
    </div>
    <div class="github-plug">
        <div class="row">
            <div class="col-4" style="display:flex;justify-content:center;align-items:center;height:150px;">
                <i class="bi bi-github"></i>
            </div>
            <div class="col-8">
            <div class="github-link">
                Interested in this project? <br>
                Follow the official repo on <a class="github-anchor" href="https://github.com/SWoinowsky/ProjectTeamPlus">GitHub</a>
            </div>
            </div>
        </div>
    </div>

</div>




